{
    "name": "express-typescript-starter",
    "version": "0.1.0",
    "description": "A starting point for Node.js express GraphQL with TypeScript",
    "repository": {
        "type": "git",
        "url": "https://github.com/shivamangina/Boilerplate-Node-Typescript-Apollo-server-Express-GraphQL-PostgreSQL"
    },
    "author": "Shiva kumar Mangina",
    "license": "MIT",
    "scripts": {
        "build": "tsc && npm run lint",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "start": "node dist/app.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"tsc -w\" \"nodemon dist/app.js\""
    },
    "dependencies": {
        "@types/graphql": "^14.5.0",
        "@types/uuid": "^8.0.0",
        "@types/validator": "^13.1.0",
        "apollo-server-express": "^2.16.0",
        "express": "^4.17.1",
        "pg": "^8.3.0",
        "pg-hstore": "^2.3.3",
        "sequelize": "^6.3.3",
        "uuid": "^8.3.0"
    },
    "devDependencies": {
        "@types/concurrently": "^4.1.1",
        "@types/eslint": "^6.8.1",
        "@types/express": "^4.17.7",
        "@types/node": "^12.12.53",
        "@typescript-eslint/eslint-plugin": "^2.34.0",
        "@typescript-eslint/parser": "^2.34.0",
        "concurrently": "^5.2.0",
        "eslint": "^6.8.0",
        "nodemon": "^1.19.4",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.7"
    }
}
