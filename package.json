{
    "name": "graphql-express-typescript-starter",
    "version": "0.1.0",
    "description": "A starting point for Node.js express GraphQL with TypeScript",
    "repository": {
        "type": "git",
        "url": "https://github.com/shivamangina/Boilerplate-Node-Typescript-Apollo-server-GraphQL-PostgreSQL"
    },
    "author": "Shiva kumar Mangina",
    "license": "MIT",
    "scripts": {
        "build": "tsc && npm run lint",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "start": "node dist/app.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"tsc -w\" \"nodemon dist/app.js\""
    },
    "dependencies": {
        "@apollo/server": "^4.7.4",
        "graphql": "^16.6.0",
        "pg": "^8.10.0",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.30.0",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/concurrently": "^7.0.0",
        "@types/eslint": "^8.37.0",
        "@types/express": "^4.17.7",
        "@types/graphql": "^14.5.0",
        "@types/node": "^12.12.53",
        "@types/uuid": "^9.0.1",
        "@types/validator": "^13.7.14",
        "@typescript-eslint/eslint-plugin": "^5.57.0",
        "@typescript-eslint/parser": "^5.57.0",
        "concurrently": "^8.0.1",
        "eslint": "^8.37.0",
        "nodemon": "^2.0.22",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.3"
    }
}
